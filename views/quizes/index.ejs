<html>
  <head>
    <meta charset="utf-8"><title>Quiz Show</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
	<table>
	<div id='c_search'>
    <form method="get" action="/quizes">
        <input type='text' name='search' id='search' placeholder='Buscar preguntas'/>
        <input type='submit' value='Buscar'/>
    </form>
</div>


<%
var i;
if (quizes.length > 0)
{
    %>
    <table id='t_questions'>
         <%
        for (i=0; i < quizes.length; i++)
        {
            %>
            <tr>
                <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
                <td><a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
                <td>
                <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
                <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">borrar
                </button>
                 </form>
                </td>
            </tr>
            <%
        }
        %>
    </table>
    <%
}
else
{
    %>
    <div class='no_results'>No se han encontrado preguntas para el criterio de b√∫squeda</div>
    <%
}
%>
 <a href="/quizes/new"><button type="button">Crear pregunta</button></a>
	</table>
  </body>
</html>